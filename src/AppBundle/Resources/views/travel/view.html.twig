{% extends '::base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ travel.name }}</h3>
                </div>
                <div class="panel-body">
                    <p>{{ travel.summary }}</p>
                    <p>{{ travel.dateStart|date("d/m/Y") }} {% if travel.dateEnd %} - {{ travel.dateEnd|date("d/m/Y") }}{% endif %}</p>
                    <div class="btn-group" role="group" aria-label="...">
                        <a href="{{ path('app_travel_view', { 'travel': travel.id }) }}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-pencil"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <-- STEPS HERE -->
        </div>
    </div>
{% endblock %}
