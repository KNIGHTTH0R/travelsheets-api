{% extends '::base.html.twig' %}
{% block nav_left %}
    <ul class="nav navbar-nav">
        <li><a href="{{ path('app_homepage') }}"><i class="glyphicon glyphicon-arrow-left"></i></a></li>
    </ul>
{% endblock %}

{% block title %}{{ travel.name }}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="btn-group fr" role="group" aria-label="...">
                        <a href="{{ path('app_travel_edit', { 'travel': travel.id }) }}" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="{{ 'actions.edit'|trans }}"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a href="{{ path('app_travel_delete', { 'travel': travel.id }) }}" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="{{ 'actions.delete'|trans }}"><i class="glyphicon glyphicon-trash"></i></a>
                    </div>
                    <div class="panel-title">{{ travel.name }}</div>
                </div>
                <div class="panel-body">
                    <p>{{ travel.summary|raw }}</p>
                    <p>â€“ {{ 'date.from'|trans }} {{ travel.dateStart|localizeddate('long', 'none') }} {% if travel.dateEnd %} {{ 'date.to'|trans }} {{ travel.dateEnd|localizeddate('long', 'none') }}{% endif %}</p>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">{{ 'entities.travel.price_list'|trans }}</div>
                </div>
                <div class="panel-body">
                    <ul>
                        <li>{{ 'entities.step.transportation.total'|trans }} : <b>{{ totalTransportation|localizedcurrency('EUR') }}</b></li>
                        <li>{{ 'entities.step.accomodation.total'|trans }} : <b>{{ totalAccomodation|localizedcurrency('EUR') }}</b></li>
                        <li>{{ 'entities.step.tour.total'|trans }} : <b>{{ totalTour|localizedcurrency('EUR') }}</b></li>
                        <li>{{ 'entities.travel.total'|trans }} : <b>{{ total|localizedcurrency('EUR') }}</b></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            {% include '@App/step/list.html.twig' %}
        </div>
    </div>
{% endblock %}
